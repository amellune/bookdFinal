  <div class="my-3 p-3 bg-white rounded box-shadow">
       {{#each keywords as |keyword|}}

     

        <h2 class="border-bottom border-gray pb-2 mb-0">Preferences</h2>
        <form action="/deleteKeyword/{{keyword._id}}?method=delete" method="POST">
         <div class="media text-muted pt-3">
           <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
           <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
             <div class="d-flex justify-content-between align-items-center w-100">
               <strong class="text-gray-dark">{{keywords.keywords.[0]}} </strong>
                <button type="submit"> Delete </button>
             </div>
           </div>
         </div>
         <div class="media text-muted pt-3">
           <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
           <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
             <div class="d-flex justify-content-between align-items-center w-100">
               <strong class="text-gray-dark">{{keywords.keywords.[1]}} </strong>
               {{!-- <a href="/edit-keyword1">Edit</a> --}}
               <button type="submit"> Delete</button>
             </div>

           </div>
         </div>
         <div class="media text-muted pt-3">
           <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
           <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
             <div class="d-flex justify-content-between align-items-center w-100">
               <strong class="text-gray-dark">{{keywords.keywords.[2]}} </strong>
              {{!-- <a href="/edit-keyword1">Edit</a> --}}
              <button type="submit"> Delete</button>
             </div>

           </div>
         </div>
         </form>

         {{/each}}
